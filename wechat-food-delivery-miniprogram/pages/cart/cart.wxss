/* pages/cart/cart.wxss */
.cart-list {
  padding-bottom: 120rpx; /* 为底部结算栏留出空间 */
}

.cart-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 5rpx;
}

.btn-minus,
.btn-plus {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: none;
  background-color: #ff6b35;
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

.item-total {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-left: 20rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
}

.total-info {
  display: flex;
  align-items: center;
}

.total-text {
  font-size: 28rpx;
  color: #333;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-left: 10rpx;
}

.checkout-actions {
  display: flex;
  gap: 20rpx;
}

.btn-clear {
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.btn-checkout {
  background-color: #ff6b35;
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

